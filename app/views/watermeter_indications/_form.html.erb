                            </div>
                            <div class="actions">
                              <%= f.submit %>
                            </div>
                            <%= link_to 'Вернуться', watermeter_watermeter_indications_path(@watermeter_indication.watermeter), class: 'btn btn-primary' %>
                          <% end %>
                        </div>
                    </div>
                </div>

