   <section class="login">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 center-col">
                        <div class="common-form">
                            <h3>Передача показників  </h3>
                            <h4> до приладу id: <%= @watermeter_indication.watermeter.id %> </h4>
