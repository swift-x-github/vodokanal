<p id="notice"><%= notice %></p>
<div class="jumbotron">
<h1>Оплаты</h1>
<%= link_to 'Создать новое поступление средств', new_payment_path, class: 'btn btn-primary' %>
<table class = "table table-striped table-sm">
  <thead>
    <tr>
      <th>Название документа</th>
      <th>Номер документа</th>
      <th>Дата документа</th>
      <th>Сумма</th>
      <th>Статус</th>
      <th>Тип</th>
      <th>Описание</th>
      <th>ID расчета</th>
      <th>ID пользователя</th>
      <th>ID водоканала</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.name %></td>
        <td><%= payment.doc_num %></td>
        <td><%= payment.doc_date %></td>
        <td><%= payment.summa %></td>
        <td><%= payment.status %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.description %></td>
        <td><%= payment.computation_id %></td>
        <td><%= payment.account_id %></td>
        <td><%= payment.vodokanal_id %></td>
         <td><%= payment.vodokanal_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


