<p id="notice"><%= notice %></p>
<div class="jumbotron">
<h1>Тарифы</h1>
<%= link_to 'Создать тариф', new_tariff_path, class: 'btn btn-primary' %>
<table class = "table table-striped table-sm">
  <thead>
    <tr>
      <th>Наименование </th>
      <th>Цена</th>
      <th>Описание</th>
      <th>Дата начала действия</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tariffs.each do |tariff| %>
      <tr>
        <td><%= tariff.name %></td>
        <td><%= tariff.price %></td>
        <td><%= tariff.description %></td>
        <td><%= tariff.date_start %></td>
        <td><%= tariff.status %></td>
        <td><%= link_to 'Просмотр', tariff, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Редактировать', edit_tariff_path(tariff), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Удалить', tariff, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

